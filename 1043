#include<stdio.h>
int main ()
{
    double a,b,c,area,pera;
    scanf("%lf %lf %lf",&a,&b,&c);
    if((a+b==c)||(b+c==a)||(a+c==b))
    {
        area=((double)(a+b))/2*c;
        printf("Area = %.1lf\n",area);
    }
    else
    {
        pera=(a+b+c);
        printf("Perimetro = %.1lf\n",pera);
    }
    return 0;
}
